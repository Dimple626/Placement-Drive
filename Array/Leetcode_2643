class Solution {
    public int[] rowAndMaximumOnes(int[][] mat) {
        int maxRowIndex = 0;
        int maxCountOfOnes = 0;

        for (int i = 0; i < mat.length; i++) {
            int countOnes = 0;
            for (int j = 0; j < mat[i].length; j++) {
                if (mat[i][j] == 1) {
                    countOnes++;
                }
            }
            if (countOnes > maxCountOfOnes) {
                maxCountOfOnes = countOnes;
                maxRowIndex = i;
            }
        }

        return new int[] { maxRowIndex, maxCountOfOnes };
    }
}
